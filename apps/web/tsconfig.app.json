{
    // @ns-sg/web
    // tsconfig.app.json
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "target": "ES2020",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ES2020"
        ],
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "jsx": "react-jsx",
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "useDefineForClassFields": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "types": [
            "vite/client"
        ],
    },
    "include": [
        "src",
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "**/*(deprecated)*",
        "dist",
        "node_modules"
    ],
    "references": [
        {
            "path": "../../packages/types/tsconfig.lib.json"
        }
    ]
}