        "react-force-graph-2d": "^1.27.4"
    },
    "devDependencies": {
        "@tailwindcss/vite": "^4.1.18",
        "@types/react": "^18.3.12",
        "@types/react-dom": "^18.3.1",
        "@vitejs/plugin-react": "^4.3.3",
        "tailwindcss": "^4.1.18",
        "typescript": "^5.7.2",
        "vite": "^7.3.1"
    }
