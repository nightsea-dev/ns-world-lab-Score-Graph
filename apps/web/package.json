{
    "name": "@ns-sg/web",
    "private": true,
    "type": "module",
    "scripts": {
        "---------- tsc": "------------------------------",
        "tsc:clean": "tsc -b --clean",
        "tsc": "npm run tsc:clean && tsc -b tsconfig.json",
        "tsc:w": "npm run tsc:clean && tsc -b tsconfig.json -w",
        "---------- vite": "------------------------------",
        "dev": "vite",
        "vite:preview": "vite preview",
        "vite:build": "npm run tsc && vite build",
        "---------- storybook": "------------------------------",
        "storybook": "storybook dev -p 6006 --host lab36 -c .storybook --no-open",
        "build-storybook": "storybook build -c .storybook -o ../../dist/storybook/web"
    },
    "dependencies": {
        "@ns-sg/types": "file:../../packages/types",
        "jerrypick": "^1.1.2",
