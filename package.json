{
    "name": "@ns-sg/root",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "keywords": [],
    "author": "",
    "license": "ISC",
    "type": "module",
    "private": true,
    "packageManager": "npm@10.9.2",
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "---------- core": "------------------------------",
        "dev": "concurrently -n server,web \"npm run dev -w @ns-sg/server\" \"npm run dev -w @ns-sg/web\"",
        "dev:server": "npm run dev -w @ns-sg/server",
        "dev:web": "npm run dev -w @ns-sg/web",
        "build": "npm run build -w @ns-sg/types && npm run build -w @ns-sg/server && npm run build -w @ns-sg/web",
        "build:types": "npm run build -w @ns-sg/types",
        "build:server": "npm run build -w @ns-sg/server",
        "build:web": "npm run build -w @ns-sg/web",
        "start": "npm run start -w @ns-sg/server",
        "---------- tsc": "------------------------------",
        "tsc:types": "npm run tsc -w @ns-sg/types",
        "tsc:types:w": "npm run tsc:w -w @ns-sg/types",
        "tsc:server": "npm run tsc -w @ns-sg/server",
        "tsc:server:w": "npm run tsc:w -w @ns-sg/server",
        "tsc:web": "npm run tsc -w @ns-sg/web",
        "tsc:web:w": "npm run tsc:w -w @ns-sg/web",
        "---------- turbo": "------------------------------",
        "turbo:dev": "turbo run dev",
        "turbo:dev:sb": "turbo run dev storybook",
        "turbo:build": "turbo run build",
        "turbo:lint": "turbo run lint",
        "---------- api:test": "------------------------------",
        "api:base": "echo http://localhost:3000/graph",
        "api:graph:root": "curl -sS http://localhost:3000/graph/",
        "api:graph:build": "curl -sS -X POST http://localhost:3000/graph/build -H \"Content-Type: application/json\" -d \"{}\"",
        "api:graph:topic": "curl -sS http://localhost:3000/graph/topics/%TOPIC_ID%",
        "api:graph:smoke": "npm run api:graph:root && npm run api:graph:build && npm run api:graph:topic",
        "api:graph:topic:auto": "node -e \"fetch('http://localhost:3000/graph/').then(r=>r.json()).then(j=>{const id=j?.data?.vertices?.[0]?.id || j?.data?.graphData?.vertices?.[0]?.id; if(!id) throw new Error('No topic id found'); return fetch('http://localhost:3000/graph/topics/'+id);}).then(r=>r.text()).then(t=>process.stdout.write(t)).catch(e=>{console.error(e); process.exit(1);})\"",
        "api:graph:smoke:auto": "npm run api:graph:root && npm run api:graph:build && npm run api:graph:topic:auto",
        "---------- ws:diagnostics": "------------------------------",
        "ws": "npm pkg get workspaces name private",
        "ws:config": "npm config get workspaces",
        "ws:ls": "npm ls --ws",
        "ws:ls:long": "npm ls --ws --long",
        "ws:depth0": "npm ls -ws --depth=0",
        "ws:json": "npm ls -ws --json",
        "ws:json:depth0": "npm ls -ws --depth=0 --json",
        "ws:names": "npm pkg get name --workspaces --json",
        "---------- nx:reference": "------------------------------",
        "nx:graph": "cls && nx graph --host=lab36 --port=4211 --open=false --verbose",
        "nx:projects": "cls && nx show projects --verbose",
        "nx:reset": "npx nx reset",
        "nx:server:tsx": "nx run @ns-sg/server:tsx:api --verbose",
        "nx:server:start": "nx run @ns-sg/server:start:api --verbose",
        "nx:server:health": "nx run @ns-sg/server:api:health --verbose",
        "nx:server:smoke": "nx run @ns-sg/server:api:smoke --verbose",
        "nx:server:routes": "nx run @ns-sg/server:api:routes --verbose",
        "---------- storybook": "------------------------------",
        "storybook:web": "turbo run storybook --filter=@ns-sg/web",
        "build-storybook:web": "turbo run build-storybook --filter=@ns-sg/web",
        "---------- misc": "------------------------------",
        "lint": "echo \"no lint configured\"",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "devDependencies": {
        "get-tsconfig": "^4.13.0",
        "postcss": "^8.5.6",
        "tailwindcss": "^4.1.18",
        "turbo": "^2.7.4"
    },
    "dependencies": {
        "@faker-js/faker": "^10.2.0",
        "call-bind": "^1.0.8",
        "es-errors": "^1.3.0",
        "force-graph": "^1.51.0",
        "forwarded": "^0.2.0",
        "get-intrinsic": "^1.3.0",
        "has-symbols": "^1.1.0",
        "ipaddr.js": "^2.3.0",
        "mobx": "^6.15.0",
        "mobx-react-lite": "^4.1.1",
        "path-to-regexp": "^8.3.0",
        "rsuite": "^6.1.1",
        "side-channel-list": "^1.0.0",
        "side-channel-map": "^1.0.1",
        "side-channel-weakmap": "^1.0.2",
        "uuid": "^13.0.0",
        "zustand": "^5.0.10"
    }
}
